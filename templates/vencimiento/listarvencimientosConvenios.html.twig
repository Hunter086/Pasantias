{% extends 'base.html.twig' %}

{% block title %}Vencimientos Convenios{% endblock %}
{% block stylesheets %}
            {{parent()}}
            <link href="{{ asset("css/form/forms.css") }}" rel="stylesheet" type="text/css">
{% endblock %}
{% block body %}
    {{parent()}}
<main class="content-datatable">
    <div class="container-datatable-box">
        <span id="list_tittle">Vencimiento Convenios</span>
        <table class="container-table" id="myTable">
            <thead>
                <tr>
                    <th>Fecha Vencimiento</th>
                    <th>Nombre</th>
                    <th>Modificar</th>
                    <th>Ver Datos</th> 
                </tr>
                </tr>
            </thead>
            <tbody>
                 {% for convenio in convenios %}
                    <tr>
                        <td>{{ convenio.getFechaFin()|date('d-m-Y')}}</td>
                        <td>{{ convenio.getTituloExpediente()}}</td>  
                        <td><a href="{{path('modificarConvenio', {'id': convenio.id})}}">
                            <img src="../img/svg/pen-to-square-solid.svg" alt="pen"></img>
                        </a></td>
                        <td><a href="{{path('verConvenio', {'id': convenio.id})}}">
                            <img src="../img/svg/eye-solid.svg" alt="ojo" ></img>
                        </a></td>                  

                        </tr>
                {% endfor %}
            </tbody>


        </table>
    </div>
</main>
{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script>
        $(document).ready(function() {
            $('#myTable').DataTable( {
                responsive: true,
                scrollY: 320,
            });
        });
    </script>
    
{% endblock %}