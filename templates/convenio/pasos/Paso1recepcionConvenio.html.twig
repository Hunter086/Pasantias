{% extends 'base.html.twig' %}

{% block title %}Recepción Convenio{% endblock %}
{% block stylesheets %}
            {{parent()}}
            <link href="{{ asset("css/form/convenio.css") }}" rel="stylesheet" type="text/css">
{% endblock %}
{% block body %}
{% if is_granted('ROLE_ADMIN') %}
{{parent()}}
<main class="content">
    <div class="container-box">
        <h2>Nuevo Convenio</h2> 
        <h1>Recibir Convenio Firmado</h1> 
            {{ form_start(formulario, {'enctype':'multipart/form-data'})}}
                <div class="container-form-box">
                        <div class="form-choice">
                            <input type="checkbox" id="recibirConvenioFirmado" name="recibirConvenioFirmado" value="recibirConvenioFirmado" required>
                            <label>¿Recibimos el convenio firmado?</label>
                        </div>
                        <div class="form-choice">

                        </div>
                </div>
                <div class="container-form-box">
                        <div class="form-box">
                            <input type="text" id="inputEmpresa"  name="inputEmpresa" onkeyup="filterFunction('inputEmpresa','paso1_recepcion_convenio_empresa');" required>
                            <label>Organización</label>
                            {{ form_widget(formulario.empresa)}}
                        </div>
                        <div class="form-box">
                            <a id="nuevaEmpresa" href="{{path('registroEmpresa')}}">Nuevo Organización</a>
                        </div>
                </div>
                <div class="container-form-box">
                        <div class="form-box">
                            <input type="text" id="inputultimaArea"   name="inputultimaArea" onkeyup="filterFunction('inputultimaArea','paso1_recepcion_convenio_ultimaArea');" required>
                            <label>Área Actual</label>
                            {{ form_widget(formulario.ultimaArea)}}
                        </div>
                        <div class="form-box">
                            <input type="text" id="inputareaSiguiente"  value="" name="inputareaSiguiente" onkeyup="filterFunction('inputareaSiguiente','paso1_recepcion_convenio_areaSiguiente');" required>
                            <label>Área Encargada</label>
                            {{ form_widget(formulario.areaSiguiente)}}
                        </div>
                </div>
                <div class="container-form-box-buttom">
                        <div class="form-box-buttom" id="buttom-load">
                            <a href="#">
                                <span></span>
                                <span></span>
                                <span></span>
                                <span></span>
                                {{ form_widget(formulario.Iniciar)}} 
                            </a>
                        </div>
                </div>
                    <div class="container-form-box-progress">
                        <div class="progress-bar" style="width: 0%"><span>0%</span></div>
                    </div>

            {{ form_end(formulario) }}
    </div>



</main>

{% endif %} 
{% endblock %}
{% block javascripts %}
       {{parent()}}
       <script src="{{ asset("js/form/filterSelect.js") }}"></script>
        
{% endblock %} 
